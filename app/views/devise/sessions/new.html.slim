.container.col-md-6.col-md-offset-3.col-sm-10.col-sm-offset-1
  == render partial: 'layouts/navbar'
  .jumbotron
    h3
      | Login
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      = devise_error_messages!
      p
        = f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true
      p
        = f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: false
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          | &nbsp;
          = f.label :remember_me
      p
        = f.submit 'Log in', class: 'btn btn-lg btn-success'
  footer.footer
    p
